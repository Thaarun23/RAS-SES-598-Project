<?xml version="1.0"?>
<sdf version="1.7">
  <model name="simple_bot">
    <static>false</static>

    <!-- Base Body -->
    <link name="base_link">
      <pose>0 0 0.1 0 0 0</pose>
      <visual name="body_visual">
        <geometry>
          <box>
            <size>0.5 0.3 0.2</size>
          </box>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>   <!-- red body -->
          <diffuse>1 0 0 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
      <collision name="body_collision">
        <geometry>
          <box>
            <size>0.5 0.3 0.2</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <mass>15.0</mass>  <!-- heavier to resist tipping -->
        <inertia>
          <ixx>0.5</ixx>
          <iyy>0.5</iyy>
          <izz>0.5</izz>
        </inertia>
      </inertial>
    </link>

    <!-- Depth Camera -->
    <sensor name="depth_camera" type="depth">
      <always_on>1</always_on>
      <update_rate>30</update_rate>
      <pose>0 0 0.3 0 0 0</pose>
      <depth_camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>10</far>
        </clip>
      </depth_camera>
    </sensor>

    <!-- Wheels -->

    <!-- Front Left Wheel (full grip both directions) -->
    <link name="wheel_fl">
      <pose>0.25 0.15 0 0 0 0</pose>
      <visual name="v_fl">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="c_fl">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2> <!-- full lateral grip -->
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass>0.3</mass>
      </inertial>
    </link>

    <!-- Front Right Wheel (full grip both directions) -->
    <link name="wheel_fr">
      <pose>0.25 -0.15 0 0 0 0</pose>
      <visual name="v_fr">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="c_fr">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass>0.3</mass>
      </inertial>
    </link>

    <!-- Rear Left Wheel (zero lateral grip) -->
    <link name="wheel_rl">
      <pose>-0.25 0.15 0 0 0 0</pose>
      <visual name="v_rl">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="c_rl">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2> <!-- allow sideways slip -->
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass>0.3</mass>
      </inertial>
    </link>

    <!-- Rear Right Wheel (zero lateral grip) -->
    <link name="wheel_rr">
      <pose>-0.25 -0.15 0 0 0 0</pose>
      <visual name="v_rr">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="c_rr">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass>0.3</mass>
      </inertial>
    </link>

    <!-- Wheel Joints -->
    <joint name="joint_wheel_fl" type="revolute">
      <parent>base_link</parent>
      <child>wheel_fl</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10</effort>
          <velocity>20</velocity>
        </limit>
        <dynamics>
          <damping>5.0</damping>
        </dynamics>
      </axis>
    </joint>

    <joint name="joint_wheel_fr" type="revolute">
      <parent>base_link</parent>
      <child>wheel_fr</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10</effort>
          <velocity>20</velocity>
        </limit>
        <dynamics>
          <damping>5.0</damping>
        </dynamics>
      </axis>
    </joint>

    <joint name="joint_wheel_rl" type="revolute">
      <parent>base_link</parent>
      <child>wheel_rl</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
        </limit>
        <dynamics>
          <damping>5.0</damping>
        </dynamics>
      </axis>
    </joint>

    <joint name="joint_wheel_rr" type="revolute">
      <parent>base_link</parent>
      <child>wheel_rr</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
        </limit>
        <dynamics>
          <damping>5.0</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- DiffDrive Plugin (frontâ€wheel drive) -->
    <plugin name="gz::sim::systems::DiffDrive"
            filename="ignition-gazebo-diff-drive-system">
      <left_joint>joint_wheel_fl</left_joint>
      <right_joint>joint_wheel_fr</right_joint>
      <wheel_separation>0.5</wheel_separation>
      <wheel_radius>0.05</wheel_radius>
      <topic>/cmd_vel</topic>
      <min_velocity>-1.0</min_velocity>
      <max_velocity>1.0</max_velocity>
      <min_force>-2.0</min_force>
      <max_force>2.0</max_force>
      <odom_publish_frequency>10.0</odom_publish_frequency>
      <odom_frame_id>odom</odom_frame_id>
      <base_frame_id>base_link</base_frame_id>
      <publish_odom_tf>true</publish_odom_tf>
    </plugin>

  </model>
</sdf>


